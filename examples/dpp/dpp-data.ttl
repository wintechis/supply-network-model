@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix dpp-odp: <http://w3id.org/dppo/ontology/dpp-odp/> .
@prefix dpp-info: <http://w3id.org/dppo/ontology/dpp-info/> .
@prefix psn: <https://purl.org/psn/vocab#> .
@prefix gs1: <https://ref.gs1.org/voc/> .
@prefix schema: <http://schema.org/> .
@prefix data: <#> .

# Item = ceon-product:Item or gs1:Product
# Product = ceon-product:Product or dpp-odp:Product or psn:Product

data:DPP a dpp-odp:DPP ;
        dpp-odp:describes data:Product ;
        dpp-info:containsInformation data:Derivation , data:Price , data:CF .
data:Product a dpp-odp:Product , gs1:Product , psn:Product ;
        gs1:manufacturer data:Org ; 
        dpp-info:hasCompositionInformation data:Derivation ;
        schema:hasMeasurement data:CF .
data:Org a gs1:Organization , psn:Enterprise ;
        psn:sells data:Product .
data:Derivation a psn:Derivation , dpp-info:DPPInformation , dpp-info:CompositionInformation ;
        psn:from data:Component ;
        psn:into data:Product ;
        psn:quantity 4.0 .
data:Component a dpp-odp:Product , gs1:Product , psn:Product .
data:Price a gs1:PriceSpecification , dpp-info:DPPInformation ;
        gs1:price 249.99 ;
        gs1:priceCurrency "USD" .
data:CF a schema:QuantitativeValue , gs1:QuantitativeValue , dpp-info:DPPInformation ;
        schema:description "CO2e footprint"@en ;
        gs1:value 0.5 ;
        gs1:unitCode "GRM" .



